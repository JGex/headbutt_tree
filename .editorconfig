[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.js]
indent_size = 4

[*.{ts,cjs}]
indent_size = 2

[*.{css,scss}]
indent_size = 4

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile*]
indent_style = tab
tab_width = 4
